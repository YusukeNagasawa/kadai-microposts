<% unless current_user.id == micropost.user_id %>
  <% if current_user.already_fav?(micropost) %>
    <%= form_for(current_user.favoraits.find_by(fav_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :fav_id, micropost.id %>
      <%= f.submit 'Unfav', class: 'btn btn-danger btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favoraits.build) do |f| %>
      <%= hidden_field_tag :fav_id, micropost.id %>
      <%= f.submit 'Fav', class: 'btn btn-primary btn-xs' %>
    <% end %>
  <% end %>
<% end %>